<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/product_list_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/product_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/product_list_image"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/check_count_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/product_list_name"
        android:text="x 0"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_toStartOf="@+id/remove_pdt"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold" />
    <Button
        android:id="@+id/remove_pdt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_cancel"
        android:layout_centerVertical="true"
        android:visibility="visible"/>
</RelativeLayout>