<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:elevation="25dp"
    android:translationZ="25dp"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="120dp"
        android:layout_height="220dp"
        android:stateListAnimator="@drawable/state"
        android:translationZ="25sp"
        app:cardElevation="25dp"
        app:cardCornerRadius="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="25dp"
            android:background="@drawable/ic_recycle_card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center">
                <ImageView
                    android:id="@+id/rec_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/cardview_compat_inset_shadow"
                    android:src="@drawable/ic_image" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/rec_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pdtname"
                    android:textColor="#858585"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/rec_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pdtprice"
                    android:textColor="#858585"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>