<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/edil_details_layout">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        app:cardBackgroundColor="#7E000000"
        app:cardElevation="-10dp">
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/labellogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingTop="30dp"
        android:text="Register Details"
        android:textColor="@color/white"
        android:textSize="42dp"
        android:background="@color/transparent"/>

    <ImageView
        android:id="@+id/edit_back_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/labellogin"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_back_btn" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_below="@+id/edit_back_btn"
        android:gravity="center">

        <TextView
            android:id="@+id/edit_label_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_details_username"
            android:layout_marginBottom="0dp"
            android:background="@color/transparent"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_details_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_label_address"
            android:layout_marginBottom="30dp"
            android:background="@drawable/text_box"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/edit_label_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_address"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:background="@color/transparent"
            android:text="Address"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_complete"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/text_box"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp" />

        <Button
            android:id="@+id/edit_complete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_shape"
            android:elevation="5dp"
            android:outlineAmbientShadowColor="#00ffb7"
            android:outlineSpotShadowColor="#00ffb7"
            android:text="register"
            android:textColor="@color/white"
            android:translationZ="5dp"
            app:backgroundTint="@color/black" />
    </RelativeLayout>
</RelativeLayout>